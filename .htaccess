# Redirections https oaliv.com
RewriteEngine On

# Redirect non-www to www and force HTTPS



RewriteRule ^carrieres$  carrieres.php [L]
RewriteRule ^home$  index.php [L]
RewriteRule ^contact$  contact.php [L]
RewriteRule ^nos-services$  nos-services.php [L]
RewriteRule ^nos-realisations$  nos-realisations.php [L]
RewriteRule ^a-propos-de-nous$  a-propos-de-nous.php [L]

# Redirections pour compatibilité avec les anciennes URLs .html
RewriteRule ^nos-services.html$  nos-services.php [L]
RewriteRule ^carrieres.html$  carrieres.php [L]
RewriteRule ^index.html$  index.php [L]
RewriteRule ^contact.html$  contact.php [L]
RewriteRule ^nos-realisations.html$  nos-realisations.php [L]
RewriteRule ^a-propos-de-nous.html$  a-propos-de-nous.php [L]

# Page d'erreur 404 personnalisée
ErrorDocument 404 /404.php

# Redirection HTTPS et ajout du www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^oaliv\.com$ [NC]
RewriteRule ^(.*)$ https://www.oaliv.com/$1 [R=301,L]

# ===== OPTIMISATIONS SEO AJOUTÉES =====

# Compression GZIP pour améliorer la vitesse
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/css
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Cache navigateur pour améliorer les performances
<IfModule mod_expires.c>
    ExpiresActive on
    
    # Images
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # CSS et JS
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Polices
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    
    # HTML - pas de cache pour le contenu dynamique
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Sécurité et SEO
<IfModule mod_headers.c>
    # Protection XSS
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    
    # Politique de référent pour le SEO
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Cache navigateur via headers
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|otf)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
</IfModule>

# Empêcher l'indexation des fichiers sensibles
<Files "config.php">
    Header set X-Robots-Tag "noindex, nofollow"
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Protection contre l'affichage des répertoires
Options -Indexes

